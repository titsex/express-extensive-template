{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "An extensive template for creating a rest API with ready-made JWT authorization.",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./build",
    "start": "cross-env NODE_ENV=production node --no-warnings --enable-source-maps ./build/index.js",
    "start:dev": "cross-env NODE_ENV=development node --no-warnings --enable-source-maps ./build/index.js",
    "dev": "npm-run-all build start:dev"
  },
  "author": "titsex",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.4.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.19",
    "@types/nodemailer": "^6.4.7",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "tscpaths": "^0.0.9",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-validator": "^6.14.3",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.1",
    "pg": "^8.9.0",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "^4.6.4",
    "typeorm": "^0.3.11"
  }
}
